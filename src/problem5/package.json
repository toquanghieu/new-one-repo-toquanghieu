{
  "name": "assignment-05",
  "version": "1.0.0",
  "description": "ExpressJs with CRUD operations",
  "private": true,
  "license": "ISC",
  "scripts": {
    "dev": "ts-node-dev tsoaconfig.ts && ts-node-dev --inspect=0.0.0.0:9229 --poll --respawn --transpile-only --max-old-space-size=20480 src/index.ts",
    "build": "tsc",
    "tsoa": "ts-node-dev tsoaconfig.ts",
    "typeorm": "typeorm-ts-node-commonjs -d ./src/infrastructure/typeorm/connection.ts",
    "migration:generate": "npx typeorm-ts-node-commonjs -d ./src/infrastructure/typeorm/connection.ts migration:generate src/infrastructure/typeorm/migrations/sql",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d ./src/infrastructure/typeorm/connection.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d ./src/infrastructure/typeorm/connection.ts",
    "lint-staged": "lint-staged",
    "prettier": "prettier --write --no-error-on-unmatched-pattern './**/*.{ts}'",
    "eslint": "eslint --no-error-on-unmatched-pattern './**/*.{js,ts,json}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npx prettier",
      "npx eslint"
    ],
    "*.ts": [
      "npx prettier",
      "npx eslint"
    ]
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.15.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "8.54.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.11",
    "prettier": "3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "5.0.1",
    "express-rate-limit": "^7.1.4",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.0.2",
    "inversify-binding-decorators": "^4.0.0",
    "mysql2": "^3.9.8",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^5.1.1",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1"
  }
}
